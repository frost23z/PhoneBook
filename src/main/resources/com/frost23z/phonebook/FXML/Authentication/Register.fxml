<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="400.0" stylesheets="@../../Styles/Authentication/Auth.css"
      xmlns="http://javafx.com/javafx/21"
      fx:controller="com.frost23z.phonebook.Controller.Authentication.Register">
    <VBox alignment="CENTER_LEFT" prefHeight="98.0" prefWidth="400.0">
        <Label text="Join us!"/>
        <Label text="Create an Account"/>
    </VBox>
    <VBox alignment="CENTER" prefHeight="147.0" prefWidth="400.0" styleClass="spacer">
        <TextField fx:id="tf_reg_user" promptText="Your Username"/>
        <PasswordField fx:id="tf_reg_pass" promptText="Your Password"/>
        <Button fx:id="bt_reg" mnemonicParsing="false" text="Register"/>
    </VBox>
    <HBox alignment="CENTER" prefHeight="37.0" prefWidth="400.0" styleClass="spacer">
        <Label styleClass="alt_label" text="Already have an account?"/>
        <Button fx:id="bt_swith_login" mnemonicParsing="false" text="Login"/>
    </HBox>
</VBox>